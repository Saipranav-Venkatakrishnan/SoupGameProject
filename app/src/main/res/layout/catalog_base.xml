<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewBlock1"
    android:layout_width="500dp"
    android:layout_height="220dp"
    android:layout_centerHorizontal="true"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    app:cardMaxElevation="12dp"
    android:layout_margin="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/soupImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/nameTxt"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/descTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:text="Description"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/soupImg"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="44dp"
            android:isIndicator="true"
            android:numStars="3"
            android:progressBackgroundTint="@color/nonActiveBox"
            android:progressTint="@color/activeBox"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:secondaryProgressTint="@color/activeBox"
            android:stepSize="0.5"
            android:transformPivotX="0dp"
            app:layout_constraintStart_toEndOf="@+id/soupImg"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>